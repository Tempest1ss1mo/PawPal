# PawPal User Service Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Connection Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pawpal_db
DB_USERNAME=pawpal_user
DB_PASSWORD=pawpal_secure_2024!

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# SSL Settings (for cloud deployment)
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Timezone
DB_TIMEZONE=UTC

# Logging
DB_LOG_LEVEL=info
DB_LOG_QUERIES=false

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Documentation
SWAGGER_TITLE=PawPal User Service API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=Microservice for managing users and dogs in the PawPal platform

# Example for different environments:

# Development
# NODE_ENV=development
# PORT=3001
# DB_HOST=localhost
# DB_NAME=pawpal_db_dev

# Production (Cloud VM)
# NODE_ENV=production
# PORT=3001
# DB_HOST=your-mysql-vm-ip
# DB_NAME=pawpal_db
# DB_SSL_ENABLED=true
# ALLOWED_ORIGINS=https://your-frontend-domain.com
